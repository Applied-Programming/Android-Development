<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:color">@color/lightColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="color">@color/secondaryColor</item>

        <item name="android:actionOverflowButtonStyle">@style/MyButtonOverflow</item>
    </style>

    <style name="CustomToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>

    <style name="MyButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/notify</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">Help -></item>

    </style>
    <style name="CustomShowcaseTheme.Base" parent="CustomShowcaseTheme">

    </style>


    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#ddECEFF1</item>
        <item name="sv_showcaseColor">#FFEB3B</item>
        <item name="sv_buttonText">Next</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#EC407A</item>
    </style>

    <style name="content" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:contentDescription">#F06292</item>
    </style>

    <style name="CustomTitle.Detail" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:contentDescription">#F06292</item>
    </style>


</resources>
